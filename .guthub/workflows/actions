- name: Send mail
  uses: dawidd6/action-send-mail@v3
  on: push
  with:
    server_address: smtp.gmail.com
    # Server port, default 25:
    server_port: 465
    # Optional whether this connection use TLS (default is true if server_port is 465)
    secure: true
    # Required mail subject:
    subject: Advanced Programming Results
    # Required recipients' addresses: (adding  emails can be done through ", newemail@babson.edu")
    to: amaffei1@babson.edu
    # Required sender full name (address can be skipped):
    from: amaffei1@babson.edu
    # Optional plain body:
    body: This is an update on the Build job of ${{github.repository}} completed successfully!
    # Optional priority: 'high', 'normal' (default) or 'low'
    priority: low
